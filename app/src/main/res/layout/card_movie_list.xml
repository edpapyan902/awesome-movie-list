<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/card_movie_list_item"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/image_movie_cover"
                android:contentDescription="@null"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/user_cover"/>
            <TextView
                android:id="@+id/text_movie_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:fontFamily="@string/font_roboto_medium"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceLarge"
                tools:text="@string/test_movie_name"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:layout_alignParentBottom="true"
                android:background="@color/text_gray_background"/>
            </RelativeLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>