<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:background="@android:color/black">

    <com.github.pavlospt.CircleView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/circle_good_bomber"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:titleSize="36sp"
        app:subtitleSize="24sp"
        app:titleColor="@color/white"
        app:backgroundColorValue="@android:color/black"
        app:fillColor="@color/good_bomber"
        app:subtitleText=""
        app:strokeColorValue="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="12dp"/>
    <com.github.pavlospt.CircleView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/circle_normal_bomber"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:titleText="title"
        app:titleSize="24sp"
        app:subtitleText=""
        app:subtitleSize="9dp"
        app:titleColor="@color/white"
        app:backgroundColorValue="@android:color/black"
        app:fillColor="@color/normal_bomber"
        app:strokeColorValue="@android:color/black"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"/>

    <com.github.pavlospt.CircleView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/circle_bad_bomber"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/circle_normal_bomber"
        android:layout_alignParentRight="true"
        android:layout_marginRight="56dp"
        android:layout_marginTop="8dp"
        app:titleText="title"
        app:titleSize="16sp"
        app:subtitleText=""
        app:titleColor="@color/white"
        app:backgroundColorValue="@android:color/black"
        app:fillColor="@color/bad_bomber"
        app:strokeColorValue="@android:color/black"
        />
</RelativeLayout>