<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:fab="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.moviebomber.ui.activity.TrailerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_trailer_header">
            <com.google.android.youtube.player.YouTubeThumbnailView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:id="@+id/image_trailer"
                android:layout_alignParentTop="true"
                android:src="@drawable/user_cover"
                android:scaleType="centerCrop"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_trailer_title"
                android:layout_centerVertical="true"
                android:text="@string/test_movie_name"
                android:textStyle="bold"
                android:fontFamily="@string/font_roboto_medium"
                android:textColor="@color/text"
                android:textSize="22sp"
                android:layout_alignBottom="@id/image_trailer"
                android:layout_margin="16dp"
                />
            </RelativeLayout>
        <com.rey.material.widget.Button
            android:id="@+id/button_trailer_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/button_trailer_more"
            android:textColor="@color/accent_light"
            android:background="@android:color/black"
            android:textAppearance="?android:textAppearanceMedium"
            style="@style/RaiseWaveButtonRippleStyle"
            app:rd_enable="true"
            android:padding="4dp"/>


        <ListView
            android:id="@+id/list_trailer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_trailer_header"
            android:layout_above="@id/button_trailer_more"
            tools:listitem="@layout/item_trailer"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/right_arrow"
            fab:fab_colorNormal="@android:color/holo_red_light"
            fab:fab_colorPressed="@color/white_pressed"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="245dp"/>
    </RelativeLayout>

    <include
        layout="@layout/toolbar_overlay"
        android:id="@+id/toolbar"/>
</FrameLayout>