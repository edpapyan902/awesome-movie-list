<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:fab="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.moviebomber.ui.activity.TrailerActivity">

    <ImageView
        android:id="@+id/image_movie_cover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/parallax_image_height"
        android:scaleType="centerCrop"
        android:src="@drawable/img_empty" />

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/parallax_image_height"
        android:background="@color/background_material_dark" />

    <com.github.ksoichiro.android.observablescrollview.ObservableListView
        android:id="@+id/list_trailer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_trailer"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/MovieTitle"
            android:textSize="20sp"
            tools:text="@string/test_movie_name"
            android:id="@+id/text_trailer_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/half_transparent"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/parallax_image_height"
            android:background="@android:color/transparent" />

    </LinearLayout>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_icon="@drawable/ic_play_arrow_white_36dp"
        fab:fab_colorNormal="@color/wallet_hint_foreground_holo_dark"
        fab:fab_colorPressed="@color/ripple_material_dark"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="bottom|right"/>

</FrameLayout>